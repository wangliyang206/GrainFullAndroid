<?xml version="1.0" encoding="utf-8"?>
<Root screenWidth="1080">
    <Image src="background.jpg" />
    <DropPhysicalView airDensity="50" gravityX="6" gravityY="10">
        <ItemGroup height="#screen_height" width="#screen_width / 2 -80" x="0" y="0">
            <Alpha height="#screen_height / 5" value="100" width="#screen_width / 2"
                x="0" y="#screen_height * 4 / 5" />
