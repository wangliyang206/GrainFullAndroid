<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 竖向自动滚动的View,类似淘宝首页(old) -->
    <declare-styleable name="VerticalScrollLayout">
        <attr name="vsl_animDuration" format="integer" />
        <attr name="vsl_sleepTime" format="integer" />
        <attr name="vsl_isCusDuration" format="boolean" />
    </declare-styleable>

    <!-- 抽奖转盘数据 -->
    <string-array name="LotteryTurntable">
        <item>角色</item>
        <item>体育</item>
        <item>方块</item>
        <item>行动</item>
        <item>搏斗</item>
        <item>字母</item>
    </string-array>

    <!--注意：pannum的数量一定要和names和icons的数量相同-->
    <declare-styleable name="TurntableView">
        <!--转盘的item数量-->
        <attr name="pannum" format="integer" />
        <!--转盘的item的文本-->
        <attr name="names" format="reference" />
        <!--转盘背景的颜色-->
        <attr name="colors" format="reference" />
        <!--控件宽占屏幕宽的比例-->
        <attr name="percentage" format="float" />
    </declare-styleable>

    <!-- DecisionActivity 晚餐食物 -->
    <string-array name="dinnerFoodName">
        <item>手擀面</item>
        <item>全鸡汉堡</item>
        <item>麻辣烫</item>
        <item>火锅</item>
        <item>烤肉拌饭</item>
        <item>过桥米线</item>
        <item>驴肉火烧</item>
        <item>家常菜</item>
    </string-array>

    <!-- DecisionActivity 早餐食物 -->
    <string-array name="breakfastFoodName">
        <item>小笼包</item>
        <item>豆浆油条</item>
        <item>胡辣汤</item>
        <item>米粥</item>
        <item>手抓饼</item>
        <item>里脊饼</item>
    </string-array>

    <!-- DecisionActivity 下午做什么 -->
    <string-array name="afternoonName">
        <item>读书学习</item>
        <item>打游戏</item>
        <item>约会</item>
        <item>逛街</item>
        <item>看电影</item>
    </string-array>

    <!-- DecisionActivity 掷个骰子 -->
    <string-array name="diceName">
        <item>.</item>
        <item>..</item>
        <item>...</item>
        <item>....</item>
        <item>.....</item>
        <item>......</item>
    </string-array>

    <!-- DecisionActivity 约会 -->
    <string-array name="appointmentName">
        <item>约</item>
        <item>不约</item>
    </string-array>

    <!-- DecisionActivity 游戏 -->
    <string-array name="gameName">
        <item>我的世界</item>
        <item>原神</item>
        <item>Dota</item>
        <item>英雄联盟</item>
        <item>多多自走棋</item>
        <item>和平精英</item>
    </string-array>

    <!-- DecisionActivity 默认颜色 -->
    <integer-array name="colors">
        <item>@color/btn_press_color</item>
        <item>@color/colorPrimary</item>
    </integer-array>

    <!-- 电子时钟 -->
    <declare-styleable name="ElecTimeNumView">
        <attr name="num" format="enum">
            <enum name="num0" value="0" />
            <enum name="num1" value="1" />
            <enum name="num2" value="2" />
            <enum name="num3" value="3" />
            <enum name="num4" value="4" />
            <enum name="num5" value="5" />
            <enum name="num6" value="6" />
            <enum name="num7" value="7" />
            <enum name="num8" value="8" />
            <enum name="num9" value="9" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressLayout">
        <!-- 控件宽-->
        <attr name="progressLayout_width" format="dimension" />
        <!-- 控件高-->
        <attr name="progressLayout_height" format="dimension" />
        <!-- 外阴影宽度-->
        <attr name="progressLayout_outer_shader_width" format="dimension" />
        <!-- 圆环宽度-->
        <attr name="progressLayout_circle_stroke_width" format="dimension" />
        <!-- 是否是清洁模式-->
        <attr name="progressLayout_clean_mode" format="boolean" />
        <!-- 是否执行指针上浮的初始化动画 -->
        <attr name="progressLayout_init_anim" format="boolean" />
        <!-- 是否是保温模式-->
        <attr name="progressLayout_keep_ware_mode" format="boolean" />
    </declare-styleable>

    <!-- 自定义TextView，可圆角 -->
    <declare-styleable name="DrawableTextView">
        <attr name="radius" format="dimension" />
        <attr name="enableCenterDrawables" format="boolean" />
        <attr name="enableTextInCenter" format="boolean" />
        <attr name="drawableStartWidth" format="dimension" />
        <attr name="drawableStartHeight" format="dimension" />
        <attr name="drawableTopWidth" format="dimension" />
        <attr name="drawableTopHeight" format="dimension" />
        <attr name="drawableEndWidth" format="dimension" />
        <attr name="drawableEndHeight" format="dimension" />
        <attr name="drawableBottomWidth" format="dimension" />
        <attr name="drawableBottomHeight" format="dimension" />
    </declare-styleable>

    <!-- 带效果的按钮 -->
    <declare-styleable name="LoadingButton">
        <attr name="enableShrink" format="boolean" />
        <attr name="enableRestore" format="boolean" />
        <attr name="disableClickOnLoading" format="boolean" />
        <attr name="shrinkDuration" format="integer" />
        <attr name="shrinkShape" format="enum">
            <enum name="Default" value="0" />
            <enum name="Oval" value="1" />
        </attr>
        <attr name="loadingEndDrawableSize" format="dimension" />
        <attr name="loadingDrawableColor" format="color" />
        <attr name="loadingDrawablePosition" format="enum">
            <enum name="Start" value="0" />
            <enum name="Top" value="1" />
            <enum name="End" value="2" />
            <enum name="Bottom" value="3" />
        </attr>
        <attr name="endSuccessDrawable" format="reference" />
        <attr name="endFailDrawable" format="reference" />
        <attr name="endDrawableAppearTime" format="integer" />
        <attr name="endDrawableDuration" format="integer" />
    </declare-styleable>


    <declare-styleable name="RadarView">
        <!--圆圈和交叉线的颜色-->
        <attr name="circleColor" format="color" />
        <!--圆圈的数量-->
        <attr name="circleNum" format="integer" />
        <!--扫描的颜色 RadarView会对这个颜色做渐变透明处理-->
        <attr name="sweepColor" format="color" />
        <!--水滴的颜色-->
        <attr name="raindropColor" format="color" />
        <!--水滴的数量 这里表示的是水滴最多能同时出现的数量。因为水滴是随机产生的，数量是不确定的-->
        <attr name="raindropNum" format="integer" />
        <!--是否显示交叉线-->
        <attr name="showCross" format="boolean" />
        <!--是否显示水滴-->
        <attr name="showRaindrop" format="boolean" />
        <!--扫描的转速，表示几秒转一圈-->
        <attr name="speed" format="float" />
        <!--水滴显示和消失的速度-->
        <attr name="flicker" format="float" />
    </declare-styleable>

    <!-- 生成验证码 -->
    <declare-styleable name="CheckView">
        <attr name="point_num" format="integer" />
        <attr name="line_num" format="integer" />
        <attr name="text_length" format="integer" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="bg_color" format="color" />
    </declare-styleable>

    <!-- 抖音点赞 -->
    <declare-styleable name="LikeView">
        <attr name="icon_type" format="string" />
        <attr name="icon_size" format="dimension|reference" />
        <attr name="like_drawable" format="reference" />
        <attr name="unlike_drawable" format="reference" />
        <attr name="dots_primary_color" format="color|reference" />
        <attr name="dots_secondary_color" format="color|reference" />
        <attr name="circle_start_color" format="color|reference" />
        <attr name="circle_end_color" format="color|reference" />
        <attr name="liked" format="boolean" />
        <attr name="is_enabled" format="boolean" />
        <attr name="anim_scale_factor" format="float" />
    </declare-styleable>

    <!--抖音加载效果-->
    <declare-styleable name="DYLoadingView">
        <attr name="radius1" format="dimension" />
        <attr name="radius2" format="dimension" />
        <attr name="rtlScale" format="float" />
        <attr name="ltrScale" format="float" />
        <attr name="color1" format="color" />
        <attr name="color2" format="color" />
        <attr name="mixColor" format="color" />
        <attr name="duration" format="integer" />
        <attr name="pauseDuration" format="integer" />
        <attr name="gap" format="dimension" />
        <attr name="scaleStartFraction" format="float" />
        <attr name="scaleEndFraction" format="float" />
    </declare-styleable>

    <!--自定义水波纹效果属性-->
    <declare-styleable name="WaveView">
        <!--波浪1的长度、高度、颜色和每次重绘的偏移量-->
        <attr name="wave1Length" format="integer" />
        <attr name="wave1Height" format="integer" />
        <attr name="wave1Color" format="color" />
        <attr name="wave1Offset" format="integer" />
        <!--波浪2的长度、高度、颜色和每次重绘的偏移量-->
        <attr name="wave2Length" format="integer" />
        <attr name="wave2Height" format="integer" />
        <attr name="wave2Color" format="color" />
        <attr name="wave2Offset" format="integer" />
        <!--边框的宽度和颜色-->
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <!--文字的大小和颜色-->
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <!--水位高度的百分比-->
        <attr name="precent" format="float" />
        <!--两次重绘的间隔时间-->
        <attr name="intervalTime" format="integer" />
        <!--控件的显示形状，rect矩形、circle圆形-->
        <attr name="showShape" format="enum">
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GridRadioGroup">
        <attr name="columnNum" format="integer" />
    </declare-styleable>
</resources>